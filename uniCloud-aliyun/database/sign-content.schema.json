{
	"bsonType": "object",
	"required": ["category_id", "content", "state", "is_del", "add_date", "last_modify_date"],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "存储文档 ID（商品 ID），系统自动生成"
		},
		"category_id": {
			"bsonType": "string",
			"description": "分类 id，参考`sign-categories`表",
			"enum": {
				"collection": "sign-category",
				"field": "name as text,_id as value"
			},
			"foreignKey": "sign-category._id"
		},
		"sign_content_sn": {
			"bsonType": "string",
			"description": "签语的唯一编号",
			"title": "编号",
			"trim": "both"
		},
		"content": {
			"bsonType": "string",
			"description": "签语内容",
			"title": "内容",
			"trim": "both"
		},
		"state": {
			"bsonType": "bool",
			"description": "是否启用",
			"title": "是否启用",
			"defaultValue": true,
			"enum": [{
				"text": "启用",
				"value": true
			}, {
				"text": "禁用",
				"value": false
			}]
		},
		"is_del": {
			"bsonType": "bool",
			"description": "是否删除",
			"title": "是否删除",
			"defaultValue": false,
			"enum": [{
				"text": "是",
				"value": true
			}, {
				"text": "否",
				"value": false
			}]
		},
		"sort": {
			"bsonType": "int",
			"description": "排序，越大越靠后",
			"title": "排序"
		},
		"add_date": {
			"bsonType": "timestamp",
			"description": "新增时间",
			"defaultValue": {
				"$env": "now"
			}
		},
		"last_modify_date": {
			"bsonType": "timestamp",
			"description": "最后修改时间",
			"defaultValue": {
				"$env": "now"
			}
		}
	}
}
