{
	"bsonType": "object",
	"required": ["name", "state", "is_del", "add_date", "last_modify_date"],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"sign_category_sn": {
			"bsonType": "string",
			"description": "签类别的唯一编号",
			"title": "编号",
			"trim": "both"
		},
		"name": {
			"required": true,
			"bsonType": "string",
			"description": "名称",
			"title": "类别",
			"trim": "both"
		},
		"state": {
			"bsonType": "bool",
			"description": "是否启用",
			"title": "是否启用",
			"defaultValue": true,
			"enum": [{
				"text": "启用",
				"value": true
			}, {
				"text": "禁用",
				"value": false
			}]
		},
		"is_del": {
			"bsonType": "bool",
			"description": "是否删除",
			"title": "是否删除",
			"defaultValue": false,
			"enum": [{
				"text": "是",
				"value": true
			}, {
				"text": "否",
				"value": false
			}]
		},
		"sort": {
			"bsonType": "int",
			"description": "排序，越大越靠后",
			"title": "排序"
		},
		"add_date": {
			"bsonType": "timestamp",
			"description": "创建时间",
			"title": "创建时间",
			"defaultValue": {
				"$env": "now"
			}
		},
		"last_modify_date": {
			"bsonType": "timestamp",
			"description": "最后修改时间",
			"title": "最后修改时间",
			"defaultValue": {
				"$env": "now"
			}
		}
	}
}
